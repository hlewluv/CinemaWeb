@model IEnumerable<CinemaWeb.Models.movy>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="icon" href="img/cinema-logo.png" type="image/png">
    <title>Admin</title>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Roboto:400,700" />
    <link rel="stylesheet" href="~/Admin/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/Admin/webfonts/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/Admin/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" type="~/Admin/text/css" href="https://npmcdn.com/flatpickr/dist/themes/material_orange.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="~/Admin/css/movie.css">

</head>
<body id="reportsPage">
    <div class="header">
        <div class="container-fluid  p-4">
            <div class="row align-items-center">
                <div class="col-md-1"></div>
                <div class="col-md-2 py-1">
                    <a href="" class="navbar-brand">
                        <img src="img/cinema-logo.png" alt="Ohayou Cinema" class="img-fluid">
                    </a>
                </div>
                <div class="col-md-7">
                    <ul class="list-gr-1 list-group list-group-horizontal">
                        <li class="list-group-item movie-area">
                            <a href="homepage.html">
                                Trang chủ
                                <i class="ti-angle-down down-btn"></i>
                            </a>
                        </li>

                        <li class="list-group-item movie-area">
                            <a href="">
                                Quản lí rạp chiếu
                                <i class="ti-angle-down down-btn"></i>
                                <ul class="sub-list-gr-1 list-group">
                                    <li><a href="movie.html">Phim</a></li>
                                    <li><a href="">Suất chiếu</a></li>
                                </ul>
                            </a>
                        </li>
                        <li class="list-group-item movie-area">
                            <a href="dailyreport.html">
                                Doanh thu
                                <i class="ti-angle-down down-btn"></i>
                            </a>
                        </li>

                        <li class="list-group-item movie-area">
                            <a href="">
                                Quản lí tài khoản
                                <i class="ti-angle-down down-btn"></i>
                                <ul class="sub-list-gr-1 list-group">
                                    <li><a href="staffManagement.html">Nhân viên</a></li>
                                    <li><a href="usersManagement.html">Khách hàng</a></li>
                                </ul>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="login-area col-md-2">
                    <div class="account-wrapper">
                        <img src="img/account.png" alt="" class="img-fluid account-img">
                        <ul class="list-group account-list">
                            <li class="list-group-item">
                                <a href="adminprofile.html">
                                    <i class="fa-solid fa-id-badge account-icon"></i>
                                    Tài Khoản
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="" class="js-logout">
                                    <i class="fa-solid fa-arrow-right-from-bracket account-icon"></i>
                                    Đăng Xuất
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="line-default"></div>
    <div class="container-fluid wrapper">
        <div class="getdate">
            <div class="input-box">
                <input type="text" placeholder="Tìm kiếm...">
                <span class="icon">
                    <i class="uil uil-search search-icon"></i>
                </span>
                <i class="uil uil-times close-icon"></i>
            </div>
            <a href="">
                @Html.ActionLink("Create New", "Create")
            </a>
        </div>
        <div class="wrapper-content">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tên phim</th>
                        <th>Quốc gia</th>
                        <th>Thể loại</th>
                        <th>Ngày công chiếu</th>
                        <th>Ngày kết thúc</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.country.country_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.movie_type.movie_type1)
                            </td>
                            <td>
                                @item.release_date.GetValueOrDefault().ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.end_date.GetValueOrDefault().ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @{
                                    DateTime currentDate = DateTime.Now.Date; // Lấy ngày hiện tại
                                    DateTime releaseDate = item.release_date.Value; // Lấy ngày release_date
                                    DateTime endDate = item.end_date.Value; // Lấy ngày end_date

                                    bool isInRange = (currentDate >= releaseDate && currentDate <= endDate); // Kiểm tra nếu nằm trong khoảng

                                    string icon = isInRange ? "Đang chiếu" : "Phim đã kết thúc"; // Chọn biểu tượng dựa trên giá trị

                                    <span>@icon</span> <!-- Hiển thị biểu tượng -->
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Detail", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr("#myID", {
            dateFormat: "d-m-Y",
        });
    </script>
    <script>
        let inputBox = document.querySelector(".input-box"),
            searchIcon = document.querySelector(".icon"),
            closeIcon = document.querySelector(".close-icon");
        searchIcon.addEventListener("click", () => inputBox.classList.add("open"));
        closeIcon.addEventListener("click", () => inputBox.classList.remove("open"));
    </script>
</body>
